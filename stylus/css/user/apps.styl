.user.profile
	header
		background-color white
		box-shadow 0 1px 10px rgba(0, 0, 0, 0.25)
		box-sizing border-box
		padding 4px 14px
		position fixed
		width 100%

		div
			display inline-block

		.ico
			cursor pointer
			margin-left 8px

			&:first-child
				margin-left 0

			&:hover
				animation beat .4s infinite alternate linear

			&.settings
			&.upload-cloud
			&.list
			&.image-list
				&:hover
					transform rotate(360deg)

	div[role="main"]
		padding 20px
		padding-top 50px

		.btn
			padding 3px 7px
			display inline
			border none
			color white
			font-size 0.7em
			border-radius 5px
			text-shadow 1px 1px #666
			text-align center
			transition all 100ms linear
			width 40px
			
			&:hover
				opacity 0.8

			&.green
				background-color #58AA00

			&.red
				background-color #E50000

		.list-apps
			li
				text-align left

		.box
			box-sizing border-box
			box-shadow 0 1px 10px rgba(0,0,0,0.25)
			border-radius 5px
			float left
			padding 10px
			margin-bottom col-1
			text-align center
			margin-left 20px

			h3
				margin-top 0.8em
				margin-bottom 1.2em

			form > div
				margin-top 5px

				&:first-child
					margin-top 0

			&:first-child
				margin-left 0

			&.mini
				height 70px
				overflow hidden

		.apps > div
			display none

		.block
			display block !important

		.menu
			margin-right col-1
			width 25%

			& > div
				cursor pointer
				margin-bottom 0.3em
				span
					&:first-child
						float left
					&:last-child
						float right

		.content
			width 72%

