.user

  .home
    cursor pointer
    position absolute
    left 8px
    top @left
    z-index 9

  h3
    .ico
      margin 3px 3px 0 0

  .modal
    position relative
    & > .user
      position absolute
      right 13px
      bottom 46px

  form
    .ico
      position absolute
      margin 6px
    input
      padding-left 30px;

  input
  .button
    transition all 200ms linear

  input
    border-radius 5px
    border 1px solid rgba(0,0,0,0.2)
    box-sizing border-box
    outline none
    padding 6px 5px
    width 100%

    &:active
    &:focus
      border 1px solid #4D90FE
      box-shadow inset 0 1px 2px rgba(0,0,0,0.3)

    &.error
      border 1px solid rgba(139,35,35,0.6)  

  .button
    border 1px solid transparent
    border-radius 5px
    text-shadow 0 1px rgba(0,0,0,0.1)
    background-color #4d90fe
    background-image linear-gradient(top,#4d90fe,#4787ed)
    color white
    cursor pointer
    text-decoration none
    padding 5px 10px

    &:hover
      background-color #357ae8
      background-image linear-gradient(top,#4d90fe,#357ae8)
      border 1px solid transparent
      color white
      text-shadow 0 1px rgba(0,0,0,0.3)
      //transform rotate(-10deg)

  .modal-container
    display table
    height 100%
    overflow hidden
    position fixed
    text-align center
    top 0
    width 100%

  .modal-backdrop
    display table-cell
    height 100%
    vertical-align middle
    width 100%

  .modal
    box-sizing border-box
    display inline-block
    text-align left
    padding 10px
    width 240px

    h3
      text-align center

    & div
      margin-bottom 0.4em

      &:last-child
        margin-top 0.6em